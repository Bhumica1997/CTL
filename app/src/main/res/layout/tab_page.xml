<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basecontainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScrollingActivity">



    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton"
        app:srcCompat="@android:drawable/ic_menu_call" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton"
        android:layout_marginTop="52dp"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_above="@+id/imageButton3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/imageButton"
        android:text="Apollo BGS Hospitals, Adichunchanagiri Road ,Kuvempunagar, Kuvempu Nagar,Mysuru" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/imageButton2"
        android:text="0821 256 6666" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_above="@+id/textView12"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageButton3"
        android:text="24hours open" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton3"
        android:text="Ratings and Reviews"
        android:textSize="17sp" />


    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:numStars="5"
        android:rating="4.3"
        android:scaleX="0.5"
        android:scaleY="0.5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="11dp"
        android:text="4.3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="14dp"
        android:text="1.Excellent Place" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="19dp"
        android:text="2.Co-operative" />


</RelativeLayout>